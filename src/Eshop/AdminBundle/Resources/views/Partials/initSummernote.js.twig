$(document).ready(function () {
    $('.summernote').summernote({
        height: {{ height }},
        toolbar: [
            ['style', ['style']],
            ['font', ['bold', 'italic', 'underline', 'clear']],
            ['fontname', ['fontname']],
            ['fontsize', ['fontsize']],
            ['color', ['color']],
            ['para', ['ul', 'ol', 'paragraph']],
            ['height', ['height']],
            ['table', ['table']],
            ['insert', ['link', 'hr']], //hide picture button
            ['view', ['fullscreen', 'codeview']],
            ['help', ['help']]
        ]
    });
});
