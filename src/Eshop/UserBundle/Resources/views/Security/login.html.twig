{% extends "::base.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/css/signin.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form class="form-signin" action="{{ path("fos_user_security_check") }}" method="post">
        <h2 class="form-signin-heading">{% trans from "messages" %}Please sign in{% endtrans %}</h2>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

        <div class="form-group">
            <label for="username">{{ 'security.login.username'|trans }}</label>
            <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}"
                   required="required"/>
        </div>
        <div class="form-group">
            <label for="password">{{ 'security.login.password'|trans }}</label>
            <input type="password" class="form-control" id="password" name="_password" required="required"/>
        </div>
        <label style="float: left;" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        <input style="float: left;margin-left: 10px;width:15px;height:15px;" type="checkbox" id="remember_me"
               name="_remember_me" value="on"/>

        <input class="btn btn-default btn-primary btn-block" type="submit" id="_submit" name="_submit"
               value="{{ 'security.login.submit'|trans }}"/>

    </form>

{% endblock body %}
